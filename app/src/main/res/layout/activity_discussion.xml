<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".DiscussionsActivity">

    <LinearLayout
        android:id="@+id/discussionsHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="0dp"
        android:paddingRight="13dp"
        android:paddingLeft="13dp"
        android:paddingTop="15dp"
        android:clickable="false"
        android:focusable="false">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Discussions"
            android:textColor="@color/Dark_Grey"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textSize="18sp"
            android:visibility="invisible"
            android:clickable="false"
            android:focusable="false"
            />


    </LinearLayout>
    <View
        android:id="@+id/emptyView4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/color_YouCantSeeME"
        android:padding="0dp"
        android:layout_margin="0dp"
        android:orientation="vertical"
        app:layout_constraintHeight_percent="0.03"
        app:layout_constraintTop_toBottomOf="@+id/discussionsHeader"
        android:clickable="false"
        android:focusable="false"
        />
    <LinearLayout
        android:id="@+id/llEmpty"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/emptyView4"
        android:background="@color/veriWhite"
        app:layout_constraintBottom_toTopOf="@+id/emptyView3"
        app:layout_constraintWidth_percent="0.95"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"
        android:clickable="false"
        android:focusable="false">

        <ImageView
            android:id="@+id/ivNoDiscussions"
            android:layout_width="280dp"
            android:layout_height="380dp"
            android:src="@drawable/nodiscussions"
            android:visibility="invisible"/>
        <TextView
            android:id="@+id/tvLoadingDiscussions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/Dark_Grey"/>

    </LinearLayout>
    <View
        android:id="@+id/emptyView3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/color_YouCantSeeME"
        android:padding="0dp"
        android:layout_margin="0dp"
        android:orientation="vertical"
        app:layout_constraintHeight_percent="0.02"
        app:layout_constraintBottom_toTopOf="@+id/bottomNav"
        />
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.9999999"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottomNav">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:id="@+id/discussionsTitle"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:paddingBottom="0dp"
                android:paddingLeft="16dp"
                android:paddingRight="10dp"
                android:paddingTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Discussions"
                    android:textAllCaps="true"
                    android:textColor="@color/Dark_Grey"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:clickable="false"
                    android:focusable="false"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:clickable="false"
                    android:focusable="false"
                    />

                <ImageButton
                    android:id="@+id/btnadduser"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:paddingBottom="5dp"
                    android:layout_gravity="right"
                    android:padding="5dp"
                    android:scaleType="fitCenter"
                    android:background="@color/btn_color_LightRed"
                    android:src="@drawable/btnadduser"
                    />
            </LinearLayout>
            <View
                android:id="@+id/emptyView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/color_YouCantSeeME"
                android:padding="0dp"
                android:layout_margin="0dp"
                android:orientation="vertical"
                app:layout_constraintHeight_percent="0.05"
                app:layout_constraintTop_toBottomOf="@+id/discussionsTitle"
                android:clickable="false"
                android:focusable="false"
                />




            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvDiscussions"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintWidth_percent="0.95"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/emptyView"
                android:dividerHeight="0.5dp"
                android:divider="@color/post_Grey"
                />
            <View
                android:id="@+id/emptyView2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/color_YouCantSeeME"
                android:padding="0dp"
                android:layout_margin="0dp"
                android:orientation="vertical"
                app:layout_constraintHeight_percent="0.02"
                app:layout_constraintTop_toBottomOf="@+id/rvDiscussions"
                />


        </android.support.constraint.ConstraintLayout>
    </ScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabPdf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabCustomSize="@dimen/fab"
        app:layout_constraintBottom_toBottomOf="@id/fabUpload"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:backgroundTint="@color/btn_color_PakatanHarapan"
        android:src="@drawable/ic_pdf"
        app:borderWidth="0dp"
        />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabCustomSize="@dimen/fab"
        app:layout_constraintBottom_toBottomOf="@id/fabUpload"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:backgroundTint="@color/btn_color_PakatanHarapan"
        android:src="@drawable/ic_img"
        app:borderWidth="0dp"
        />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabVid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabCustomSize="@dimen/fab"
        app:layout_constraintBottom_toBottomOf="@id/fabUpload"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:backgroundTint="@color/btn_color_PakatanHarapan"
        android:src="@drawable/ic_video"
        app:borderWidth="0dp"
        />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabUpload"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:clickable="true"
        android:src="@drawable/upload"
        android:backgroundTint="@color/btn_color_PakatanHarapan"
        app:borderWidth="0dp"
        android:layout_centerInParent="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="@dimen/BiggerPadding"
        />
    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        app:itemIconTint="@color/bottom_nav_color"
        app:itemTextColor="@color/bottom_nav_color"
        app:menu="@menu/bottom_nav_items"
        android:translationZ="-100dp"
        app:layout_constraintBottom_toBottomOf="parent"/>


</android.support.constraint.ConstraintLayout>