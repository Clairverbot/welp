<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/bg2</item>
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:textViewStyle">@style/Text</item>
        <item name="alertDialogTheme">@style/AppCompatAlertDialogStyle</item>
    </style>
    <style name="SplashTheme"   parent="Theme.AppCompat.NoActionBar">
        <item name="android:colorBackground">@color/the4ab5c7</item>
    </style>
    <style name="LoginSignUp" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/bg1</item>
        <item name="android:textColor">@color/text_color_primary</item>
    </style>
    <style name="Text" parent="android:Widget.TextView">
        <item name="android:fontFamily">Futura Md BT</item>
    </style>

    <style name="Profile" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/bg1</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="DialogTheme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:textColorPrimary">@color/colorPrimaryDark</item>
        <item name="android:colorBackground">@color/veriWhite</item>
        <item name="android:windowBackground">@color/veriWhite</item>
    </style>
    <style name="spinnerStyle"  parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:padding">5sp</item>
    </style>

    <style name="SearchTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/selectSubClicked</item>
        <item name="colorPrimaryDark">@color/Dark_Grey</item>
        <item name="colorAccent">@color/profile_DarkBlue</item>
        <item name="android:windowBackground">@color/selectSubClicked</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textViewStyle">@style/Text</item>
        <item name="android:textColorHint">@color/LightDark_Grey</item>
    </style>


    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/profile_LightBlue</item>
        <item name="android:textColorPrimary">@color/Dark_Grey</item>
        <item name="android:background">@color/veriWhite</item>
    </style>
</resources>
